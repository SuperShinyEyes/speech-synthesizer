#!/bin/sh

# EST shared script

extend() {
	var="$1"
	extra="$2"
	eval "val=\$$var"
	
	if [ -n "$val" ]
		then
		val="$extra:$val"
	else
		val="$extra"
	fi
	eval "$var='$val'"
	eval "export $var"
	}

extend LD_LIBRARY_PATH "/l/ljuvela/CODE/SPCC_TTS/SPCC_2016_TTS/speech_tools/lib:"

exec /l/ljuvela/CODE/SPCC_TTS/SPCC_2016_TTS/speech_tools/main/tilt_synthesis "$@"

exit 0

